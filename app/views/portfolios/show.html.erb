<div class="container">
  <div class="row">
    <div class="col-md-7">
      <%= image_tag @portfolio_item.main_image %>
    </div>
    <div class="col-md-5">

      <h1><%= @portfolio_item.title %></h1>

      <hr>

      Subtitle: <%= @portfolio_item.subtitle %>
      <p>Body: <%= @portfolio_item.body %></p>

      <hr>

      <h2>Technologies used</h2>
      <% @portfolio_item.technologies.each do |t| %>
        <p><%=t.name%></p>
      <% end %>
      <hr>

  
    </div>
  </div>
</div>











